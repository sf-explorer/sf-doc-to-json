# Salesforce Connection Configuration
# Copy this file to .env and fill in your credentials

# Salesforce Login URL
# Use https://login.salesforce.com for production
# Use https://test.salesforce.com for sandbox
SF_LOGIN_URL=https://login.salesforce.com

# Your Salesforce username (email)
SF_USERNAME=your-username@example.com

# Your Salesforce password
SF_PASSWORD=your-password

# Security token (optional if your IP is whitelisted)
# Get from: Setup → Personal Information → Reset Security Token
SF_SECURITY_TOKEN=


# Specific objects to fetch (optional, comma-separated)
# Leave empty to fetch all objects
SF_OBJECTS=

# Batch size for fetching (optional, default: 10)
SF_BATCH_SIZE=10

# OAuth2 Authentication (Alternative to username/password)
# Use this if SOAP API login is disabled in your org
# Get an access token using one of these methods:
# 1. Salesforce CLI: sf org display --target-org your-org --json
# 2. Web Server Flow (see ENV_GUIDE.md)
SF_ACCESS_TOKEN=
SF_INSTANCE_URL=

# OAuth2 Client Credentials (Optional)
SF_CLIENT_ID=
SF_CLIENT_SECRET=
SF_REDIRECT_URI=http://localhost:3000/callback

# Merge with existing doc/objects structure (preserves descriptions)
# Set to true to enhance existing documentation with describe metadata
# Set to false to create new schema files
SF_MERGE_WITH_DOCS=false

# Resume from last processed object (default: true)
SF_RESUME=true

# Or manually start from specific index (overrides resume)
# SF_START_FROM_INDEX=444

# Skip custom objects (default: true - only process standard objects)
SF_SKIP_CUSTOM=true
