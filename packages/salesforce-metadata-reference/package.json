{
  "name": "@sf-explorer/salesforce-metadata-reference",
  "version": "1.0.0",
  "description": "Salesforce Metadata API object reference from official documentation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/doc/*.json": "./dist/doc/*.json",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run copy:doc",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "copy:doc": "node scripts/copy-doc.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "rebuild-index": "npx tsx scripts/rebuild-index.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm test",
    "pack:preview": "npm pack --dry-run"
  },
  "keywords": [
    "salesforce",
    "metadata",
    "metadata-api",
    "object-reference",
    "schema",
    "typescript",
    "browser",
    "tree-shakeable",
    "esm"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sf-explorer/sf-doc-to-json.git",
    "directory": "packages/salesforce-metadata-reference"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}


