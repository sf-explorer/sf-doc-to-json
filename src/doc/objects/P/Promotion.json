      "AreQualItemsExclFromDiscounts": {
        "type": "boolean",
        "description": "Exclude qualifying items from discount. You can use this field to create buy-one-get-one promotions. The default value is false. This field is available in API version 56.0 and later."
      },
      "CurrencyIsoCode": {
        "type": "picklist",
        "description": "Available only for orgs with the multicurrency feature enabled. Contains the ISO code for any currency allowed by the organization.",
        "format": "enum",
        "enum": [
          "USD"
        ],
        "maxLength": 3,
        "nullable": true
      },
      "DiscountOrder": {
        "type": "picklist",
        "description": "Indicates whether to apply discounts first to the least expensive products or to the most expensive products."
      },
      "DiscountRestriction": {
        "type": "picklist",
        "description": "Indicates whether to restrict the products that can be discounted based on the least expensive qualifying product."
      },
      "DisplayName": {
        "type": "string",
        "description": "Display name of the promotion."
      },
      "EndDateTime": {
        "type": "dateTime",
        "description": "Date and time when the promotion ends."
      },
      "ExclusivityType": {
        "type": "picklist",
        "description": "Determines whether a promotion can be combined with other promotions."
      },
      "IsApproachingDiscountApplicable": {
        "type": "boolean",
        "description": "Indicates that the promotion shows an approaching discount message. Set an approaching discount threshold value on the PromotionQualifier object. This field is available in API version 64.0 and later."
      },
      "IsAutomatic": {
        "type": "boolean",
        "description": "Determines whether the promotion is automatic or manual. If the promotion is automatic, it automatically applies to eligible carts with no buyer action required. if the promotion is manual, the buyer applies a coupon to redeem the promotion."
      },
      "IsCommercePromotion": {
        "type": "boolean",
        "description": "Indicates if the promotion is a B2B Commerce promotion (true) or not (false)."
      },
      "IsTiered": {
        "type": "boolean",
        "description": "Indicates whether the promotion uses promotion tiers (true) or not (false). This value can’t be changed."
      },
      "MaximumUsageCount": {
        "type": "int",
        "description": "Maximum number of times the promotion can be applied to a cart. If left blank, the default value is 1. This field is available in API version 56.0 and later."
      },
      "PriorityNumber": {
        "type": "int",
        "description": "Priority for the promotion. The priority determines which promotions apply first. The lower the number, the higher the priority."
      },
      "QualifierCriteria": {
        "type": "picklist",
        "description": "If a promotion has multiple qualifiers, this field determines whether all qualifiers must be met or whether any must be met for the promotion to apply."
      },
      "StartDateTime": {
        "type": "dateTime",
        "description": "Date and time when the promotion begins."
      },
      "TargetCriteria": {
        "type": "picklist",
        "description": "If a promotion has multiple targets, indicates whether a cart must meet the criteria for any target or the criteria for all targets."
      },
      "TermsAndConditions": {
        "type": "textarea",
        "description": "Terms and conditions the buyer accepts before applying the promotion."
      }
